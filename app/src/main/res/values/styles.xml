<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="FABStyle">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:elevation">@dimen/elevation_small</item>
        <item name="pressedTranslationZ">@dimen/elevation_xlarge</item>
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_marginTop">@dimen/card_margin</item>
        <item name="android:layout_marginStart">@dimen/card_margin</item>
        <item name="android:layout_marginEnd">@dimen/card_margin</item>
        <item name="android:elevation">@dimen/elevation_xxsmall</item>
        <item name="pressedTranslationZ">@dimen/elevation_medium</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>

    </style>

</resources>
